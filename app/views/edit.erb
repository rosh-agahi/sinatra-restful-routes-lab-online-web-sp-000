<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch"> 

  <label for="name">Recipe Name</label><br>
  <input type="text" id="name" name="name" value="<%= @recipe.name %>"><br>

  <label for="ingredients">Ingredients</label><br>
  <textarea id="ingredients" name="ingredients" value="<%= @recipe.ingredients %>"></textarea><br>

  <label for="cook_time">Cook Time</label><br>
  <input type="text" id=cook_time" name="cook_time" value="<%= @recipe.cook_time %>"><br><br>

  <input type="submit" value="submit">

</form>